  "author": "Roberto Sero",
  "scripts": {
    "dev": "NODE_OPTIONS=--enable-source-maps tsx --inspect=0.0.0.0:9229 src/main.ts",
    "studio": "prisma studio",
    "sync": "prisma db push",
    "seed": "tsx src/data.ts",
