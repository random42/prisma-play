    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tsconfig/recommended": "^1.0.13",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^7.1.0",
    "rimraf": "^6.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
