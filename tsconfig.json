{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src",
    "examples",
    "test"
  ],
  "exclude": [],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "baseUrl": ".",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
  }
}